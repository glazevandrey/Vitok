@model web_server.Models.User

@{
    var s = "/registration";
    if (ViewData["Id"] != null)
    {
        s += "?id=" + ViewData["Id"].ToString();
    }
   
}
<form method='post' action="@s">
    <div>
        @Html.AntiForgeryToken()
        <div>
            <label>First Name</label><br />
        </div>

        <div>
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control txtbox" })
        </div>
        <div>
            <label>Last Name</label><br />
        </div>
        <div>
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control txtbox" })
        </div>
        <div>
            <label>Birth Day</label><br />
        </div>
        <div>
            @Html.TextBoxFor(m => m.BirthDate, new { @class = "form-control txtbox" })
        </div>
        <div>
            <label>Email</label><br />
        </div>
        <div>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control txtbox" })
        </div>
        <div style="padding-top:20px;"></div>
        <div>
            <label>Password</label><br />
        </div>
        <div>
            @Html.PasswordFor(m => m.Password, new { @class = "form-control txtbox" })
        </div>
        <div>
            <label>Phone</label><br />
        </div>
        <div>
            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control txtbox" })
        </div>
       
    </div>

    <br/>
    <input class="btn btn-primary btn-lg rph-login-button" type="submit" value="Register" />
    <br />
    <br />
    <a href="/login/">Есть аккаунт? Войти!</a>

</form>   
    <table id="table1">
        <thead >
           <tr class="brd" style="height:20px">
            <th colspan="25" style="padding-top:20px;font-weight:bold !important">
                
                    <form method="get" action="/manageschool/setDateM"  id="setDateForm" style="display: inline-block;">

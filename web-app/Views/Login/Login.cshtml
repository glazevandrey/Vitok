@using web_server.Models;
@using web_server.Models.DBModels;
@model User


<!DOCTYPE html>
<html style="font-size: 16px;" lang="ru">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    <title>Вход</title>
    <link rel="stylesheet" href="/content/nicepage.css" media="screen">
    <link rel="stylesheet" href="/content/login/Вход.css" media="screen">


    @*    <link id="u-theme-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i|Open+Sans:300,300i,400,400i,500,500i,600,600i,700,700i,800,800i">
    <link id="u-page-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i">
*@
    <link id="u-page-google-font" rel="stylesheet" href="~/css/fonts/Montserrat.css">
    <link id="u-theme-google-font" rel="stylesheet" href="~/css/fonts//Roboto.css">

    <meta name="theme-color" content="#478ac9">
    <meta property="og:title" content="Вход">
    <meta property="og:type" content="website">
</head>
<body class="u-body u-xl-mode" data-lang="ru">
    <script>
        document.addEventListener("keydown", function (event) {
            if (event.key === "Enter") {
               document.getElementById('form-1').submit();
            }
        });
        </script>
    <header class="u-clearfix u-header u-valign-middle u-header" id="sec-676a">
        <div class="u-clearfix u-group-elements u-group-elements-1">
            <img class="logo u-image u-image-contain u-image-default u-preserve-proportions u-image-1" src="~/content/images/image6.png" alt="" data-image-width="94" data-image-height="95">
            <h3 class="logo-text-vitok u-custom-font u-font-montserrat u-text u-text-1">ВИТОК</h3>
            <h3 class="logo-text-online u-custom-font u-font-montserrat u-text u-text-2">
                онлайн-школа<br>
            </h3>
        </div>
    </header>
    <section class="u-clearfix u-section-1" id="sec-dc88">
        <div class="u-clearfix u-sheet u-sheet-1">

            <h1 class="u-align-center u-text u-text-default u-text-1">
                Добро пожаловать&nbsp; в Виток!<span style="font-weight: 700;">
                    <span style="font-weight: 400;">
                        <span style="font-weight: 700;"></span>
                    </span>
                </span>
            </h1>

            <div class="u-form u-form-1">

                <form action="/login/" class="u-clearfix u-form-spacing-50 u-form-vertical u-inner-form" method="post" source="email" id="form-1" name="form-1" style="padding: 10px;">
                    <div class="u-form-group u-form-name">
                    <label id="error" style="color:darkred" hidden="hidden">Неверное имя пользователя или пароль</label>
                    </div>
                    <div class="u-form-group u-form-name u-label-none">
                        <input type="text" placeholder="Введите почту" id="name-266d" name="email" class="u-custom-color-1 u-input u-input-rectangle u-radius-10 u-text-white u-input-1">
                    </div>
                    <div class="u-form-group u-label-none">
                        <input type="password" placeholder="Введите пароль" id="email-266d" name="password" class="u-custom-color-1 u-input u-input-rectangle u-radius-10 u-text-white u-input-2">
                    </div>
                    <div class="u-align-left u-form-group u-form-submit u-label-none">
                        <a onclick="document.getElementById('form-1').submit()" class="u-btn u-btn-round u-btn-submit u-button-style u-custom-color-2 u-radius-10 u-btn-1">Войти</a>
                        <!--<input type="submit" value="submit" class="u-form-control-hidden"/>-->
                    </div>
                    <div class="u-form-send-message u-form-send-success"> Спасибо! Ваше сообщение отправлено. </div>
                    <div class="u-form-send-error u-form-send-message"> Отправка не удалась. Пожалуйста, исправьте ошибки и попробуйте еще раз. </div>
                </form>
            </div>
            <h3 class="u-align-center u-text u-text-default u-text-2">
                Нет аккаунта?<span style="font-weight: 700;"></span>
            </h3>
            <a href="#" id="href2" class="u-align-center u-border-none u-btn u-btn-round u-button-style u-custom-color-2 u-radius-10 u-btn-2">Зарегистрироваться</a>
        </div>
    </section>

</body>
</html>

 @{
        if(ViewData["Id"] != null)
        {
            <script>
            document.getElementById('href2').setAttribute('href',  "/registration?id=@ViewData["Id"].ToString()");
            </script>
        }
        else
        {
            
            <script>
            document.getElementById('href2').setAttribute('href', "/registration");
            </script>

        }
    }

@{
    if (ViewData["error"] != null)
    {
        <script>
            document.getElementById("error").removeAttribute("hidden");
            document.getElementById("error").innerHTML = '@ViewData["error"].ToString()';
        </script>
    }
}
